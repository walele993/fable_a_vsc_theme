{
  "name": "Liquorice",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#CCCCCC",
    "statusBar.background": "#111111",
    "statusBar.foreground": "#FF7EB6",
    "sideBar.background": "#000000",
    "sideBar.foreground": "#666666",
    "sideBarSectionHeader.foreground": "#666666",
    "sideBarSectionHeader.background": "#000000",
    "list.hoverForeground": "#FF7EB6",
    "activityBar.background": "#000000",  
    "activityBar.foreground": "#FF7EB6",
    "activityBar.inactiveForeground": "#666666",
    "activityBarBadge.background": "#FF7EB6",
    "activityBarBadge.foreground": "#000000",
    "list.activeSelectionForeground": "#FF7EB6",
    "list.activeSelectionBackground": "#000000",
    "list.inactiveSelectionForeground": "#FF7EB6",
    "list.inactiveSelectionBackground": "#000000",
    "tab.activeForeground": "#FF7EB6",   // Testo scheda attiva (rosa)
    "tab.inactiveForeground": "#666666", // Testo schede inattive (grigio)
    "tab.activeBackground": "#000000",   // Sfondo scheda attiva (opzionale)
    "tab.inactiveBackground": "#000000", // Sfondo schede inattive (opzionale)
    "tab.activeBorder": "#FF7EB6",
    "tab.border": "#000000",
    "menu.selectionForeground": "#FF7EB6",
    "menu.selectionBackground": "#000000",
    "menu.foreground": "#6c757d",
    "quickInput.background": "#000000",
    "quickInput.foreground": "#6c757d",
    "quickInputList.focusBackground": "#000000",
    "quickInputList.focusForeground": "#666666",
    "button.background": "#D16D9C",
    "editorCursor.foreground": "#FF7EB6",
    "editorLineNumber.foreground": "#4A4A4A",
    "editor.selectionBackground": "#D16D9C60",
    "editor.selectionHighlightBackground": "#FF7EB630",
    "editor.lineHighlightBackground": "#1C1C1C",
    "focusBorder": "#8A9B6E",
    "dropdown.background": "#000000",
    "dropdown.border": "#000000",
    "input.background": "#000000",
    "input.border": "#000000",
    "input.foreground": "#6c757d",
    "input.placeholderForeground": "#6c757d",
    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#6c757d",
    "titleBar.inactiveBackground": "#000000",
    "titleBar.inactiveForeground": "#6c757d",
    "titleBar.border": "#000000",
    "editorGroupHeader.tabsBackground": "#000000"
  },
  "tokenColors": [
    {
      "name": "Functions/Methods",
      "scope": ["entity.name.function", "meta.method"],
      "settings": {
        "foreground": "#FF7EB6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable"],
      "settings": {
        "foreground": "#8A9B6E",
        "fontStyle": "italic bold"
      }
    },
    {
      "name": "Strings",
      "scope": ["string"],
      "settings": {
        "foreground": "#A3C9A3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword"],
      "settings": {
        "foreground": "#FF7EB6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": {
        "foreground": "#C49B6C"
      }
    },
    {
      "name": "Comments",
      "scope": ["comment"],
      "settings": {
        "foreground": "#666666",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Types/Classes",
      "scope": ["storage.type", "support.type", "entity.name.class"],
      "settings": {
        "foreground": "#9E7EBE"
      }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#D16D9C"
      }
    },
    {
      "name": "HTML Tags",
      "scope": ["entity.name.tag.html"],
      "settings": {
        "foreground": "#FF7EB6"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": ["entity.other.attribute-name.html"],
      "settings": {
        "foreground": "#8A9B6E"
      }
    },
    {
      "name": "CSS Selectors",
      "scope": ["entity.name.tag.css"],
      "settings": {
        "foreground": "#8A9B6E"
      }
    },
    {
      "name": "CSS Properties",
      "scope": ["support.type.property-name.css"],
      "settings": {
        "foreground": "#D16D9C"
      }
    }
  ]
}