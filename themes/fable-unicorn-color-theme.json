{
  "name": "Unicorn",
  "type": "light",
  "colors": {
    "editor.background": "#FFFFFF",  // Bianco più caldo per un look più accogliente
    "editor.foreground": "#333333",  // Mantieni il contrasto scuro per il testo
    "statusBar.background": "#F1F1F1",  // Un grigio più morbido per la status bar
    "statusBar.foreground": "#E85A94",  // Mantieni il rosa per coerenza
    "statusBarItem.prominentBackground": "#99999950",
    "sideBar.background": "#FAFAFA",  // Un bianco-grigio più delicato per la sidebar
    "sideBar.foreground": "#999999",  // Un grigio scuro per il testo della sidebar
    "sideBarSectionHeader.foreground": "#888888",  // Mantieni il grigio scuro
    "sideBarSectionHeader.background": "#F4F4F4",  // Un bianco pulito per la sezione
    "list.hoverForeground": "#D6409F",
    "activityBar.background": "#F4F4F4",  // Un grigio chiaro per la activity bar
    "activityBar.foreground": "#E85A94",  // Il rosa per l'attività
    "activityBar.inactiveForeground": "#999999",  // Un grigio medio per gli elementi inattivi
    "activityBarBadge.background": "#E85A94",  // Badge rosa
    "activityBarBadge.foreground": "#FFFFFF",  // Badge bianco per contrasto 
    "list.activeSelectionForeground": "#E85A94",  // Rosa per la selezione attiva
    "list.activeSelectionBackground": "#EFEFEF",  // Un grigio molto chiaro per il background della selezione attiva
    "list.inactiveSelectionForeground": "#E85A94",  // Rosa per la selezione inattiva
    "list.inactiveSelectionBackground": "#F9F9F9",  // Un bianco-grigio molto chiaro
    "menu.selectionForeground": "#E85A94",  // Rosa per la selezione nel menu
    "menu.selectionBackground": "#EFEFEF",  // Un grigio chiaro per la selezione nel menu
    "button.background": "#6C9C86",  // Un verde pastello per il bottone, in contrasto con il rosa
    "editorCursor.foreground": "#E85A94",  // Il rosa per il cursore
    "editorLineNumber.foreground": "#888888",  // Un grigio più scuro per i numeri di linea
    "editor.selectionBackground": "#D6D6D650",  // Un grigio chiaro per la selezione
    "editor.selectionHighlightBackground": "#E85A9450",  // Rosa semi-trasparente per il highlight
    "editor.lineHighlightBackground": "#F1F1F1",
    "focusBorder": "#6C9C86"  // Verde pastello per il bordo del focus
},
  "tokenColors": [
    {
      "name": "Functions/Methods",
      "scope": ["entity.name.function", "meta.method"],
      "settings": {
        "foreground": "#D6409F",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Variables/Attributes",
      "scope": ["variable", "entity.other.attribute-name"],
      "settings": {
        "foreground": "#8A9B6E",
        "fontStyle": "italic bold"
      }
    },
    {
      "name": "Strings",
      "scope": ["string"],
      "settings": {
        "foreground": "#A3C9A3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords/Types",
      "scope": ["keyword", "storage.type", "entity.name.tag"],
      "settings": {
        "foreground": "#D6409F",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Numbers/Booleans",
      "scope": ["constant.numeric", "keyword.operator"],
      "settings": {
        "foreground": "#B8A898"
      }
    },    
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#D6409F" 
      }
    },
    {
      "name": "Comments",
      "scope": ["comment"],
      "settings": {
        "foreground": "#A0988C",
        "fontStyle": "italic"
      }
    },
    {
      "name": "HTML Tags",
      "scope": ["entity.name.tag.html"],
      "settings": {
        "foreground": "#D6409F"
      }
    },
    {
      "name": "Types/Classes",
      "scope": ["storage.type", "support.type", "entity.name.class"],
      "settings": {
        "foreground": "#7A4EBF"
      }
    },
    {
      "name": "HTML Attributes",
      "scope": ["entity.other.attribute-name.html"],
      "settings": {
        "foreground": "#8A9B6E"
      }
    },
    {
      "name": "CSS Selectors",
      "scope": ["entity.name.tag.css"],
      "settings": {
        "foreground": "#5E8A5E"
      }
    },
    {
      "name": "CSS Properties",
      "scope": ["support.type.property-name.css"],
      "settings": {
        "foreground": "#D6409F"
      }
    }
  ]
}